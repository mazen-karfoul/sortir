{% extends 'layout.html.twig' %}



{% block title %}{{ parent() }} | Créer une sortie {% endblock %}

{% block main %}
    <h2>Créer une sortie</h2>

    {{ form_start(sortieForm) }}


    <div class="container">
        <div class="row justify-content-center">
            <div class="col col-md-10 col-lg-8">
                <div class="card shadow mt-5">
                    <div class="card-body">
                        <h2>Nouvelle Sortie </h2>
                        {{ form_widget(sortieForm) }}


                        <input type="submit" value="Enregistrer" class="btn btn-primary"/>
                        <input type="submit" value="Publier la sortie" class="btn btn-primary"/>
                        <input type="submit" value="Annuler" class="btn btn-primary"/>


                        {{ form_end(sortieForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}